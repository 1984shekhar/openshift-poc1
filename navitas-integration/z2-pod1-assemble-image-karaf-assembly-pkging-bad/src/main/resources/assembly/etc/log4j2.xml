<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
<Appenders>
    <Console name="Console" target="SYSTEM_OUT">
        <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} -ETC-LOG4J2.XML %msg%n"/>
    </Console>
</Appenders>
<Loggers>
    <Logger name="com.navitas" level="debug" additivity="false">
        <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="org.apache.karaf.features" level="debug" additivity="false">
        <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="org.apache.felix" level="debug" additivity="false">
        <AppenderRef ref="Console"/>
    </Logger>
    <Root level="debug">
        <AppenderRef ref="Console"/>
    </Root>
</Loggers>
</Configuration>
